#!/usr/bin/env node

var fs = require('fs');
var timber = require('../index');

var dir     = process.argv[2],
    context = process.argv[3],
    script  = process.argv[4],
    data    = process.argv[5];

if (!dir) {
    throw new Error("Usage: timber <dirname> [context] [script] [data]");
}

if (script && fs.existsSync(script)) {
    script = fs.readFileSync(script).toString();
}

if (data && fs.existsSync(data)) {
    data = eval(fs.readFileSync(data).toString());
}

console.log(timber.compileDir(dir, context, script, data));
